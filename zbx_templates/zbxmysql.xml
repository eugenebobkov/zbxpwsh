<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>4.0</version>
    <date>2019-03-02T15:57:48Z</date>
    <groups>
        <group>
            <name>MySQL/MariaDB Databases</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Template App MySQL Database</template>
            <name>Template App MySQL Database</name>
            <description>Template for MySQL and MariaDB  database monitoring end-point&#13;
It used for monitoring from Management host with installed Zabbix agent&#13;
Hostname and port have to be updated in MACROS section</description>
            <groups>
                <group>
                    <name>MySQL/MariaDB Databases</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>Availability</name>
                </application>
            </applications>
            <items>
                <item>
                    <name>Availability status</name>
                    <type>0</type>
                    <snmp_community/>
                    <snmp_oid/>
                    <key>zbxmysql[get_instance_state,{$HOSTNAME},{$PORT},{$USERNAME},{$PASSWORD}]</key>
                    <delay>0;1m/{$CHECK_TIMEFRAME}</delay>
                    <history>90d</history>
                    <trends>0</trends>
                    <status>0</status>
                    <value_type>4</value_type>
                    <allowed_hosts/>
                    <units/>
                    <snmpv3_contextname/>
                    <snmpv3_securityname/>
                    <snmpv3_securitylevel>0</snmpv3_securitylevel>
                    <snmpv3_authprotocol>0</snmpv3_authprotocol>
                    <snmpv3_authpassphrase/>
                    <snmpv3_privprotocol>0</snmpv3_privprotocol>
                    <snmpv3_privpassphrase/>
                    <params/>
                    <ipmi_sensor/>
                    <authtype>0</authtype>
                    <username/>
                    <password/>
                    <publickey/>
                    <privatekey/>
                    <port/>
                    <description>Check availability status for the instance</description>
                    <inventory_link>0</inventory_link>
                    <applications>
                        <application>
                            <name>Availability</name>
                        </application>
                    </applications>
                    <valuemap/>
                    <logtimefmt/>
                    <preprocessing/>
                    <jmx_endpoint/>
                    <timeout>3s</timeout>
                    <url/>
                    <query_fields/>
                    <posts/>
                    <status_codes>200</status_codes>
                    <follow_redirects>1</follow_redirects>
                    <post_type>0</post_type>
                    <http_proxy/>
                    <headers/>
                    <retrieve_mode>0</retrieve_mode>
                    <request_method>0</request_method>
                    <output_format>0</output_format>
                    <allow_traps>0</allow_traps>
                    <ssl_cert_file/>
                    <ssl_key_file/>
                    <ssl_key_password/>
                    <verify_peer>0</verify_peer>
                    <verify_host>0</verify_host>
                    <master_item/>
                </item>
            </items>
            <discovery_rules/>
            <httptests/>
            <macros>
                <macro>
                    <macro>{$CHECK_TIMEFRAME}</macro>
                    <value>1-7,00:00-24:00</value>
                </macro>
                <macro>
                    <macro>{$CONNECT_ATTAMPTS}</macro>
                    <value>#2</value>
                </macro>
                <macro>
                    <macro>{$CONNECT_TIMEOUT}</macro>
                    <value>300</value>
                </macro>
                <macro>
                    <macro>{$HOSTNAME}</macro>
                    <value/>
                </macro>
                <macro>
                    <macro>{$PASSWORD}</macro>
                    <value/>
                </macro>
                <macro>
                    <macro>{$PORT}</macro>
                    <value>5432</value>
                </macro>
                <macro>
                    <macro>{$PROCESSES_HIGH}</macro>
                    <value>90</value>
                </macro>
                <macro>
                    <macro>{$USERNAME}</macro>
                    <value>svc_zabbix</value>
                </macro>
            </macros>
            <templates/>
            <screens/>
        </template>
    </templates>
    <triggers>
        <trigger>
            <expression>{Template App MySQL Database:zbxmysql[get_instance_state,{$HOSTNAME},{$PORT},{$USERNAME},{$PASSWORD}].regexp(&quot;^ONLINE$&quot;,{$CONNECT_ATTAMPTS})}=0</expression>
            <recovery_mode>0</recovery_mode>
            <recovery_expression/>
            <name>The instance is not available (Reason: {ITEM.VALUE})</name>
            <correlation_mode>0</correlation_mode>
            <correlation_tag/>
            <url/>
            <status>0</status>
            <priority>4</priority>
            <description>The instance is not available</description>
            <type>0</type>
            <manual_close>0</manual_close>
            <dependencies/>
            <tags>
                <tag>
                    <tag>Scope</tag>
                    <value>Availability</value>
                </tag>
            </tags>
        </trigger>
        <trigger>
            <expression>{Template App MySQL Database:zbxmysql[get_instance_state,{$HOSTNAME},{$PORT},{$USERNAME},{$PASSWORD}].nodata({$CONNECT_TIMEOUT})}=1</expression>
            <recovery_mode>0</recovery_mode>
            <recovery_expression/>
            <name>The instance is not available (Timeout: {$CONNECT_TIMEOUT})</name>
            <correlation_mode>0</correlation_mode>
            <correlation_tag/>
            <url/>
            <status>1</status>
            <priority>4</priority>
            <description>The instance is not available, no data</description>
            <type>0</type>
            <manual_close>0</manual_close>
            <dependencies/>
            <tags>
                <tag>
                    <tag>Scope</tag>
                    <value>Availability</value>
                </tag>
            </tags>
        </trigger>
    </triggers>
</zabbix_export>
